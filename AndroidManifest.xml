<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.android.gtalkstatus"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:name=".GTalkStatusApplication" android:label="@string/app_name" android:icon="@drawable/icon">
        <activity android:name="GTalkStatusActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".GTalkStatusUpdater" />
        <receiver android:name=".GTalkStatusIntentReceiver">
    		<intent-filter>
                <action android:name="com.android.music.playstatechanged"/>
                <action android:name="com.android.music.playbackcomplete"/>
                <action android:name="com.android.music.metachanged"/>
                <action android:name="com.android.music.queuechanged"/>
                <action android:name="com.htc.music.metachanged" />
                <action android:name="com.htc.music.playbackcomplete" />
                <action android:name="com.htc.music.playstatechanged" />
    		</intent-filter>
    	</receiver>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest> 
